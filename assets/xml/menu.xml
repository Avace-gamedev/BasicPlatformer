    <text name="title" center_x="true" y="50pt" width="screen.width" align="center" size="40pt" text="BasicPlatformer" color="0xff4169e1">
    </text>

    <button name="level_0_0" center_y="true" label="0" height="30pt">
        <param type="string" value="play" />
        <param type="int" value="0" />
        <param type="int" value="0" />
        <text size="20pt" />
    </button>
    <button name="level_0_1" label="1" height="30pt">
        <param type="string" value="play" />
