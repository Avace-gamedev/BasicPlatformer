        <param type="int" value="1" />
        <text size="20pt" />
    </button>
    <button name="level_0_2" label="2" height="30pt">
        <param type="string" value="play" />
        <param type="int" value="0" />
        <param type="int" value="2" />
        <text size="20pt" />
