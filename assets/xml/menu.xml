    </button>
    <text name="play_text" size="10pt" width="screen.width" align="center" text="Level 0" color="0xff4169e1">
        <anchor y="play_btn.bottom" y-flush="top" />
    </text>


    <text name="area0" size="20pt" width="500pt" text="Select level:" color="0xff4169e1">
        <anchor x="level_0_0.left" y="level_0_0.top" x-flush="left" y-flush="bottom" />
